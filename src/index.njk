---
title: A page for you
layout: base.njk
---

<div class="container">
  <h1>This is a page for you</h1>
  <div class="vibe">You are great!</div>
  <div class="love">
    ❤️
  </div>
  <ul>
    {% for article in news.articles %}
      <li>
        <p style="font-size:25px;">
          <a href='{{article.url}}'>
            {{article.title}}} 
          <a/>
        <p/>
        <img src="{{article.urlToImage}}" width="100%" />
        <span>
              {{article.source.name}} - <time>
                {{article.publishedAt}}
                <time/>
        <span/>
        <li/>
       {% endfor %}

  </ul>
</div>
        <script src="/js/vibe.js"></script>